// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Member model for the team (Équipe)
model Member {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  role      String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]
}

// Task model for the to-do list
model Task {
  id          String    @id @default(cuid())
  title       String
  description String?
  completed   Boolean   @default(false)
  priority    Priority  @default(MEDIUM)
  dueDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  memberId    String?
  member      Member?   @relation(fields: [memberId], references: [id])
  parentId    String?
  parent      Task?     @relation("SubTasks", fields: [parentId], references: [id])
  subTasks    Task[]    @relation("SubTasks")
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

// Order model for tracking sales/orders (Suivi des Colis)
model Order {
  id           String   @id @default(cuid())
  date         DateTime @default(now())
  designation  String   // Product description
  client       String   // Client name
  adresse      String   // Address
  telephone    String   // Phone number
  prixVente    Float    // Selling price
  prixAchat    Float    // Purchase price
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Product model for inventory management
model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  contenance  String?  // Size/capacity e.g. "1 L", "0,75 cl"
  images      String[] // Array of image URLs from UploadThing
  prixAchat   Float    // Purchase price
  prixVente   Float    // Selling price
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// PrintJob model for printing service (Service d'Impression)
model PrintJob {
  id            String   @id @default(cuid())
  client        String   // Client name
  description   String?  // Description of the job
  largeur       Float    // Width in cm
  hauteur       Float    // Height in cm
  quantite      Int      @default(1) // Number of labels
  surfaceUnitM2 Float    // Surface per unit in m²
  surfaceTotalM2 Float   // Total surface in m²
  prixUnitaire  Float    @default(24) // Price per m² (default 24 TND)
  prixTotal     Float    // Total price
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Invoice/Devis model
model Invoice {
  id                    String        @id @default(cuid())
  numero                String        @unique // Invoice number e.g. "0001-2025"
  date                  DateTime      @default(now())
  // Client info
  clientName            String        // Company name
  clientTel             String?       // Phone
  clientEmail           String?       // Email
  clientAddress         String?       // Address
  clientMatriculeFiscale String?      // Matricule Fiscale (Tax ID)
  // Totals
  sousTotal             Float         // Subtotal
  timbre                Float         @default(0) // Stamp tax
  total                 Float         // Total amount
  // Status
  status                InvoiceStatus @default(PENDING)
  // Relations
  items                 InvoiceItem[]
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
}

model InvoiceItem {
  id          String   @id @default(cuid())
  designation String   // Product/service description
  quantite    Float    // Quantity
  prixUnit    Float    // Unit price
  total       Float    // Line total (quantite * prixUnit)
  invoiceId   String
  invoice     Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum InvoiceStatus {
  PENDING
  PAID
  CANCELLED
}

// Facture model
model Facture {
  id                    String        @id @default(cuid())
  numero                String        @unique // Facture number e.g. "0001-2025"
  date                  DateTime      @default(now())
  // Client info
  clientName            String        // Company name
  clientTel             String?       // Phone
  clientEmail           String?       // Email
  clientAddress         String?       // Address
  clientMatriculeFiscale String?      // Matricule Fiscale (Tax ID)
  // Totals
  sousTotal             Float         // Subtotal
  timbre                Float         @default(0) // Stamp tax
  total                 Float         // Total amount
  // Status
  status                InvoiceStatus @default(PENDING)
  // Relations
  items                 FactureItem[]
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
}

model FactureItem {
  id          String   @id @default(cuid())
  designation String   // Product/service description
  quantite    Float    // Quantity
  prixUnit    Float    // Unit price
  total       Float    // Line total (quantite * prixUnit)
  factureId   String
  facture     Facture  @relation(fields: [factureId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Import Contact model for managing import suppliers/contacts
model ImportContact {
  id          String   @id @default(cuid())
  nom         String   // Contact name
  entreprise  String?  // Company name
  pays        String?  // Country
  telephone   String?  // Phone number
  email       String?  // Email
  adresse     String?  // Address
  notes       String?  // Additional notes
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Import Procedure model for tracking import procedures
model ImportProcedure {
  id              String            @id @default(cuid())
  reference       String            @unique // Reference number
  description     String            // Description of the import
  fournisseur     String            // Supplier name
  pays            String?           // Country of origin
  dateCommande    DateTime?         // Order date
  dateExpedition  DateTime?         // Shipping date
  dateArrivee     DateTime?         // Expected/actual arrival date
  statut          ImportStatus      @default(EN_COURS)
  montant         Float?            // Total amount
  devise          String?           @default("EUR") // Currency
  documents       String?           // Document references
  notes           String?           // Additional notes
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
}

enum ImportStatus {
  EN_COURS      // In progress
  EXPEDIE       // Shipped
  EN_DOUANE     // In customs
  LIVRE         // Delivered
  ANNULE        // Cancelled
}
