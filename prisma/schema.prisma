// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Member model for the team (Ã‰quipe)
model Member {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  role      String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]
}

// Task model for the to-do list
model Task {
  id          String    @id @default(cuid())
  title       String
  description String?
  completed   Boolean   @default(false)
  priority    Priority  @default(MEDIUM)
  dueDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  memberId    String?
  member      Member?   @relation(fields: [memberId], references: [id])
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

// Order model for tracking sales/orders (Suivi des Colis)
model Order {
  id           String   @id @default(cuid())
  date         DateTime @default(now())
  designation  String   // Product description
  client       String   // Client name
  adresse      String   // Address
  telephone    String   // Phone number
  prixVente    Float    // Selling price
  prixAchat    Float    // Purchase price
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Product model for inventory management
model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  contenance  String?  // Size/capacity e.g. "1 L", "0,75 cl"
  images      String[] // Array of image URLs from UploadThing
  prixAchat   Float    // Purchase price
  prixVente   Float    // Selling price
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
